<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="library.xbmc.games"
       name="Games"
       version="1.0"
       provider-name="Team XBMC">
    <requires>
        <import addon="xbmc.addon" version="11.0"/>
        <import addon="xbmc.python" version="2.0"/>
    </requires>
    <extension point="xbmc.library" name="Game Library" library="default.py">
        <library label="games" playlists="true"/>
        <database name="MyGames" version="1"/>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">Play your games</summary>
        <description lang="en"></description>
        <platform>all</platform>
    </extension>
</addon>
